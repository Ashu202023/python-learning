#4.10 
pet_animal=['dog','cat','hamster','parrot','fish','rabbit','turtle']
print("The first three items in the list are:")
for i in pet_animal[:3]:
    print(i.title())

print("Three items from the middle of the list are:")
for i in pet_animal[2:5]:
    print(i.title())

print("The last three items in the list are:")
for i in pet_animal[-3:]:
    print(i.title())

My_pizzas=['pepperoni','mushroom','cheese','sausage','vegetable']
friend_pizzas=My_pizzas[:]
My_pizzas.append('pineapple')
friend_pizzas.append('anchovies')
print("My favorite pizzas are:")
for pizza in My_pizzas:
    print(pizza.title())
print("My friend's favorite pizzas are:")
for pizza in friend_pizzas:
    print(pizza.title()) 

#4.12
for pizza in My_pizzas:
    print(pizza.title())

for pizza in friend_pizzas:
    print(pizza.title()) 
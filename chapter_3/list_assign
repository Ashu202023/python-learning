for i in friends:
    print(i.title())

#3.2 
for i in friends:
    print(f"Hello, {i.title()}.")

#3.3 
fav_transports=["car","bike","helicopter","train"]
for i in fav_transports:
    if i[0] not in "aeiuo":
        print(f"I would like to own a {i.title()}.")
    else:
        print(f"I would like to own an {i.title()}.")

#3.4 
guest_list=["gojo","sakura","Hinata"]
for i in guest_list:
    print(f"Dear {i.title()}, you are invited to the dinner party.please come without any gifts.")

#3.5 
guest_miss=input("enter the name of a guest who can't make it: ")
print(f"Dear {guest_miss.title()} you can't make it to the dinner party, we will miss you. Please try to come next time.")
removed_guest=guest_list.remove(guest_miss)
guest_list.append("Naruto")


for i in guest_list:
    print(f"Dear {i.title()}, you are invited to the dinner party.please come without any gifts.") 

#3.6 
guest_list.insert(0,"kakasi")
guest_list.insert(len(guest_list)//2,"sasuke")
guest_list.append("madara") 

for i in guest_list:
    print(f"Dear {i.title()}, you are invited to the dinner party.please come without any gifts.") 

#3.7 
while len(guest_list)>2:
    removed_guest=guest_list.pop()
    print(f"Dear {removed_guest.title()}, you are not invited to the dinner party, please try to come next time.")

for i in guest_list:
    print(f"Dear {i.title()}, you are still invited to the dinner party, please come without any gifts.")
while len(guest_list)>0:
    removed_guest=guest_list.pop()

print(guest_list)

#3.8 
place_to_visit=["london","america","russia","bangkok","paris"]
print(place_to_visit)
print(f"Sorted list: {sorted(place_to_visit)}.")
print(f"Original list: {place_to_visit}.")
print(f"Sorted list in reverse order: {sorted(place_to_visit,reverse=True)}.")
print(f"Original list: {place_to_visit}.")
place_to_visit.reverse()
print(f"reversed list: {place_to_visit}.")
place_to_visit.reverse()
print(f"reversed list again: {place_to_visit}.")
place_to_visit.sort()
print(f"sorted list: {place_to_visit}.")
place_to_visit.sort(reverse=True)
print(f"sorted list in reverse order: {place_to_visit}.")

